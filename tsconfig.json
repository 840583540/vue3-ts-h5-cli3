{
    "include": ["./**/*.ts"],
    "compilerOptions": {
      "jsx": "react",
      "target": "esnext",
      "module": "esnext",
      "sourceMap": true,
      "outDir": "./dist",
  
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
  
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules"
    ]
  }